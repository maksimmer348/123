<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
                    xmlns:local="clr-namespace:TelerikWpfApp2">

    <DataTemplate x:Key="ContentTemplateEmpty">
        <ScrollViewer>
            <Grid  HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="Перейдите в конфигурацию испытаний" 
                           FontSize="16" Foreground="#f00" FontWeight="Medium"/>
            </Grid>
        </ScrollViewer>
    </DataTemplate>

    <DataTemplate x:Key="ContentWizard">
        <ScrollViewer>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="24"/>
                </Grid.ColumnDefinitions>
<DockPanel>
     <TextBlock Margin="0,0,10,0" DockPanel.Dock="Left">Выбор типа Виспытуемых ВИПов</TextBlock>
                    <telerik:RadComboBox DockPanel.Dock="Right" ItemsSource="{Binding Title}">
    
</telerik:RadComboBox>
</DockPanel>
            
                <Button Grid.Row="1" Grid.Column="0" Margin="5" Background="{Binding SubItems[0].IconBrush}" Command="{Binding SelectMenuItemCommand}" CommandParameter="{Binding SubItems[0]}">000</Button>
                <Button Grid.Row="2" Grid.Column="0" Margin="5" Background="{Binding SubItems[1].IconBrush}"></Button>
                <Button Grid.Row="3" Grid.Column="0" Margin="5" Background="{Binding SubItems[2].IconBrush}"></Button>
                <Button Grid.Row="4" Grid.Column="0" Margin="5" Background="{Binding SubItems[3].IconBrush}"></Button>
                <Button Grid.Row="1" Grid.Column="1" Margin="5" Background="{Binding SubItems[4].IconBrush}"></Button>
                <Button Grid.Row="2" Grid.Column="1" Margin="5" Background="{Binding SubItems[5].IconBrush}"></Button>
                <Button Grid.Row="3" Grid.Column="1" Margin="5" Background="{Binding SubItems[6].IconBrush}"></Button>
                <Button Grid.Row="4" Grid.Column="1" Margin="5" Background="{Binding SubItems[7].IconBrush}"></Button>
                <Button Grid.Row="1" Grid.Column="2" Margin="5" Background="{Binding SubItems[8].IconBrush}"></Button>
                <Button Grid.Row="2" Grid.Column="2" Margin="5" Background="{Binding SubItems[9].IconBrush}"></Button>
                <Button Grid.Row="3" Grid.Column="2" Margin="5" Background="{Binding SubItems[10].IconBrush}"></Button>
                <Button Grid.Row="4" Grid.Column="2" Margin="5" Background="{Binding SubItems[11].IconBrush}"></Button>

                <StackPanel Grid.Row="5" Grid.ColumnSpan ="3" Grid.Column="0"
                            ScrollViewer.VerticalScrollBarVisibility="Hidden" DockPanel.Dock="Bottom">
                    <Button Command="{Binding TryStartTestCommand}" CommandParameter="{Binding }">Далее</Button>
                   
                </StackPanel>
            </Grid>

        </ScrollViewer>
    </DataTemplate>
    <DataTemplate x:Key="ContentTemplateAllVips">
        <ScrollViewer>
            <Grid ShowGridLines="True">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="24"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Row="0" Grid.Column="0" Margin="5" Background="{Binding SubItems[0].IconBrush}" Command="{Binding SelectMenuItemCommand}" CommandParameter="{Binding SubItems[0]}">000</Button>
                <Button Grid.Row="1" Grid.Column="0" Margin="5" Background="{Binding SubItems[1].IconBrush}"></Button>
                <Button Grid.Row="2" Grid.Column="0" Margin="5" Background="{Binding SubItems[2].IconBrush}"></Button>
                <Button Grid.Row="3" Grid.Column="0" Margin="5" Background="{Binding SubItems[3].IconBrush}"></Button>
                <Button Grid.Row="0" Grid.Column="1" Margin="5" Background="{Binding SubItems[4].IconBrush}"></Button>
                <Button Grid.Row="1" Grid.Column="1" Margin="5" Background="{Binding SubItems[5].IconBrush}"></Button>
                <Button Grid.Row="2" Grid.Column="1" Margin="5" Background="{Binding SubItems[6].IconBrush}"></Button>
                <Button Grid.Row="3" Grid.Column="1" Margin="5" Background="{Binding SubItems[7].IconBrush}"></Button>
                <Button Grid.Row="0" Grid.Column="2" Margin="5" Background="{Binding SubItems[8].IconBrush}"></Button>
                <Button Grid.Row="1" Grid.Column="2" Margin="5" Background="{Binding SubItems[9].IconBrush}"></Button>
                <Button Grid.Row="2" Grid.Column="2" Margin="5" Background="{Binding SubItems[10].IconBrush}"></Button>
                <Button Grid.Row="3" Grid.Column="2" Margin="5" Background="{Binding SubItems[11].IconBrush}"></Button>
                <telerik:RadComboBox Grid.Row="0" Grid.Column="0" DockPanel.Dock="Right" ItemsSource="{Binding SubItems}" DisplayMemberPath="NumVip" SelectedValue="{Binding Path=NavigationViewItemModel}" />
                <StackPanel Grid.Row="5" Grid.ColumnSpan ="3" Grid.Column="0"
                            ScrollViewer.VerticalScrollBarVisibility="Hidden" DockPanel.Dock="Bottom">
                        <Button Command="{Binding TryStartTestCommand}" CommandParameter="{Binding }">Далее</Button>
                </StackPanel>
                        
            </Grid>
        </ScrollViewer>
    </DataTemplate>

    <DataTemplate x:Key="ContentTemplateVip">
        <ScrollViewer>
            <Grid Margin="20 20 20 20" ShowGridLines="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel>

                    <TextBlock Text="{Binding Title}" FontSize="16" Foreground="#F90" FontWeight="Medium"/>
                    <TextBlock Text="{Binding NumVip}" FontSize="16" Foreground="DarkBlue" FontWeight="Medium"/>
                    <TextBlock Text="{Binding VIP.Temperature}" FontSize="16" Foreground="Fuchsia" FontWeight="Medium"/>
                    <TextBlock Text="{Binding VIP.VoltageInput}" FontSize="16" Foreground="Red" FontWeight="Medium"/>
                </StackPanel>

            </Grid>

        </ScrollViewer>
    </DataTemplate>

    <local:NavigationContentTemplateSelector x:Key="NavigationContentTemplateSelector" 
                                             TemplateEmpty="{StaticResource ContentTemplateEmpty}"
                                             TemplateWizard="{StaticResource ContentWizard}"
                                             TemplateAllVips="{StaticResource ContentTemplateAllVips}" 
                                             TemplateVip="{StaticResource ContentTemplateVip}"/>

</ResourceDictionary>